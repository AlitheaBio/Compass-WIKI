{
  "schemaVersion": "1.0",
  "name": "golden-no-ui",
  "version": "0.1.0",
  "type": "no-ui",
  "computeType": "fargate",
  "description": "Reference backend-only module used in SDK golden path tests.",
  "execution": {
    "entrypoint": "backend.main:GoldenNoUIModule",
    "supports": [
      "interactive",
      "workflow"
    ],
    "defaultMode": "interactive"
  },
  "author": {
    "name": "Alithea Bio",
    "email": "modules@alithea.bio",
    "organization": "Reference"
  },
  "inputs": {
    "type": "object",
    "title": "Input parameters",
    "required": ["samples"],
    "properties": {
      "samples": {
        "type": "array",
        "title": "Samples",
        "description": "List of sample identifiers to summarize",
        "items": {"type": "string"}
      },
      "options": {
        "type": "object",
        "title": "Options",
        "properties": {
          "include_peptides": {
            "type": "boolean",
            "default": true,
            "description": "Include mock peptide annotations"
          }
        }
      }
    }
  },
  "outputs": {
    "results": {
      "type": "object",
      "description": "Structured summary returned from the backend"
    },
    "summary": {
      "type": "object",
      "description": "High-level summary for display"
    }
  },
  "resources": {
    "memory": 512,
    "timeout": 180,
    "environment": {
      "LOG_LEVEL": "INFO"
    }
  },
  "metadata": {
    "exposedParameters": [],
    "auditLog": true
  },
  "permissions": {
    "database": ["read"],
    "storage": true,
    "network": []
  },
  "pricing": {
    "tiers": [
      {
        "tier": "developer",
        "model": "usage-based",
        "amountAct": 0.1
      }
    ]
  }
}
